<h1>Create a new Game</h1>
<form action="/games" method="post">
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" />
    </div>
    <div>
        <label for="genre">Genre</label>
        <select id="genre" name="genre">
            <option value="" disabled selected></option>
            {{#each genres}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label for="release-year">Release Year</label>
        <input type="number" name="release-year" id="release-year" min="1960" max="2019" />
    </div>
    <div>
        <label for="publisher">Publisher Name</label>
        <input type="text" name="publisherName" id="publisher" />
    </div>
    <div>
        <label for="publisher">Publisher Location</label>
        <input type="text" name="publisherLocation" id="publisher" />
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>
</form>